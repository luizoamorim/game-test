{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false
    },
    "include": ["src/**/*", "src/ormconfig.ts", "src/data-source.ts"],
    "exclude": ["node_modules", "src/test/**/*"]
}
